# FrameForge 3D Configuration
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=*

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/framekraft

# Redis Configuration (for job queue)
REDIS_URL=redis://localhost:6379

# Storage Configuration
# Options: 's3' or 'local'
STORAGE_TYPE=s3

# AWS S3 Configuration (if using S3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=frameforge-3d-models

# Local Storage Configuration (if using local)
LOCAL_STORAGE_PATH=/app/models

# Model Generation Settings
MAX_CONCURRENT_JOBS=5
DEFAULT_TEXTURE_QUALITY=high

# Auto-seed sample data on startup (set to 'true' to enable)
# This will add 20 sample frames if the database is empty
SEED_SAMPLE_DATA=true
